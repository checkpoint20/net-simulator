<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
        <format>tar.bz2</format>
        <format>zip</format>
    </formats>
    <files>
        <file>
            <source>${project.build.directory}/netsimulator-${project.version}.jar</source>
            <outputDirectory>/</outputDirectory>
            <destName>netsimulator.jar</destName>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>COPYING</include>
                <include>README.md</include>
                <include>install*</include>
                <include>run*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/cfg</directory>
            <outputDirectory>/cfg</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/xml</directory>
            <outputDirectory>/xml</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>